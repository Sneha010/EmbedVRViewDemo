<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vr.demo.MainActivity"
    android:orientation="vertical"
    android:gravity="center">

<Button
    android:id="@+id/vrImage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="VR Image From Local"
    android:padding="15dp"
    android:textSize="18sp"
    />
    <Button
        android:id="@+id/vrImageRemote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VR Image From Remote"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/vrVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VR Video From Local"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/vrVideoRemote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VR Video From Remote"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        />
</LinearLayout>
